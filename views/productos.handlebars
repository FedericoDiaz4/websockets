<h1 class="text-center">Productos Agregados.</h1>

{{#if conProductos}}
    <table class="table">
        <thead class="table-secondary">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Titulo</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
            </tr>
        </thead>
        
        <tbody class="table-secondary">
            {{#each productos}}
            <tr>
                <th scope="row">{{this.id}}</th>
                    <td>{{this.title}}</td>
                    <td>$ {{this.price}}</td>
                    <td><img src={{this.thumbnail}} alt="imagen producto" width="35"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <h2 class="text-center">No hay productos.</h2>
{{/if}}